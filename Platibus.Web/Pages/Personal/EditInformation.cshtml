@page "{Id}"
@model Platibus.Web.Pages.Personal.EditInformationModel
@{
    ViewData["Title"] = "EditInformation";
}

<h2>EditInformation</h2>

<hr />
<div class="row">
    <div class="col-md-4 center-div">
        <form method="post">
            <div class="form-group">
                <label asp-for="_user.Name" class="control-label"></label>
                <input asp-for="_user.Name" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="_user.Email" class="control-label"></label>
                <input type="email" asp-for="_user.Email" class="form-control" />
            </div>
                <label asp-for="_user.Password" class="control-label"></label>
                <input type="password" asp-for="_user.Password" class="form-control"/>
            <div class="form-group">
                <input type="submit" asp-page-handler="UpdateUser" value="Update User" />
            </div>
        </form>
    </div>
</div>