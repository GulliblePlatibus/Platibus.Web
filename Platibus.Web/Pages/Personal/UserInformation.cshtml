@page
@model Platibus.Web.Pages.User_Pages.UserInformationModel
@{
    ViewData["Title"] = "UserInformation";
}





<div class="row">
    <div class="col-lg-12">
        <div class="box">
            <div class="box-header with-border">
                <h3 class="box-title text-primary"><i class="fas fa-user"></i>  Administrative Page</h3>
                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip"
                            title="Collapse">
                        <i class="fa fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove">
                        <i class="fa fa-times"></i>
                    </button>
                </div>
            </div>
            <div class="box-body">
               
                
                <!-- Content -->
               
                
                <div class="center-div" style="width: 400px">
                    <div>Name:</div>
                    <div class="center-div">@Model.user.Name</div>
                    <hr />
                    <div>E-mail:</div>
                    <div class="center-div">@Model.user.Email </div>
                    <hr />
                    <div>Company ID: </div>
                    <div class="center-div">@Model.user.Id</div>
                    <hr />
                    <div>Company Role:</div>
                    <div class="center-div">@Model.idString (Access Level @Model.user.AccessLevel )</div>
                    <hr />
                    <br />
                    <hr />
                    <div class="center-div" title="(note: Company ID & Access Level/Organizational Role can not be changed from here)">
                        <a asp-page="./EditInformation" asp-route-id=@Model.user.Id>Edit your information</a>
                    </div>
                    <hr />
                </div>
                
                <!-- End content -->
            </div>
        </div>
    </div>
</div>