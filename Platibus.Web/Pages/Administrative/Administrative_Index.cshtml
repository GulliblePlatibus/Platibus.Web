@page
@model Platibus.Web.Pages.Administrative.Administrative_IndexModel
@{
    ViewData["Title"] = "Administrative_Index";
}

<h2>Administrative</h2>
<hr />

@section Styles {
    <link href="~/content/Administrative/content.css" rel="stylesheet" type="text/css" asp-append-version="true" />
}

<div class="row">
    <div class="col-lg-12">
        <div class="box">
            <div class="box-header with-border">
                <h3 class="box-title text-primary"><i class="fas fa-user"></i>  Administrative Page</h3>
                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip"
                            title="Collapse">
                        <i class="fa fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove">
                        <i class="fa fa-times"></i>
                    </button>
                </div>
            </div>
            <div class="box-body center-admin">
               
                
                <!-- Content -->
                
                <div class="row">
                    <div class="col-lg-12 center">

                        <div class="form-group center">
                            <a asp-page="./Administrative_CreateUser">
                                <div class="glyphicon glyphicon-user fa-5x" aria-hidden="true"></div>
                                <div>Create User</div>
                            </a>
                        </div>
                        
                        <div class="form-group center-div">
                            <a asp-page="./Administrative_EditUsers">
                                <div class="glyphicon glyphicon-edit fa-5x" aria-hidden="true"></div>
                                <div>Edit Users</div>
                            </a>
                        </div>
                    </div>
                </div>
                
                <!-- End content -->
            </div>
        </div>
    </div>
</div>




