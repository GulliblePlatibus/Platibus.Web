@page
@model Platibus.Web.Pages.Administrative.Administrative_CreateUserModel
@{
    ViewData["Title"] = "Administrative_CreateUser";
}

<h2>Create User</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <p>Full name*:</p>
                <input name="user_realName">
                <br />
            </div>
            <div class="form-group">
                <p>Email*: </p>
                <input type="email" name="user_email">
                <br />
            </div>
            <div class="form-group">
                <p>Password*: </p>
                <input type="password" name="user_password">
                <br />
            </div>
            <div class="form-group">
                <p>Role*(Select 1): </p>
                <i class="normal-text"> Employee: <input type="checkbox" name="checkbox_employee" /></i>
                <i class="normal-text"> Manager: <input type="checkbox" name="checkbox_manager" /></i>
                <i class="normal-text"> Administrative: <input type="checkbox" name="checkbox_admMan" /></i>
                <br />
            </div>
            <div class="form-group">
                <input type="submit" value="Create User" 
                asp-page-handler="CreateUser" />
            </div>
        </form>
    </div>
</div>

