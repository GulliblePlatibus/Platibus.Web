@page
@model Platibus.Web.Pages.Administrative.Administrative_CreateUserModel
@{
    ViewData["Title"] = "Administrative_CreateUser";
}
<div class="container-login100">
    <form class="container-corner validate-form" method="post">
        <span class="login100-form-title">
            Create User
        </span>

        <span style="margin: 10px"></span>

        <div hidden="@Model.UserCreationSuccesfull" class="success" style="border-radius: 25px"> <span class="closebtn" onclick="this.parentElement.style.display='none';"> &times; </span>  @Model.UserCreationSuccesMSg </div>
        <div hidden="@Model.UserCreationError" class="alert" style="border-radius: 25px"> <span class="closebtn" onclick="this.parentElement.style.display='none';"> &times; </span>  @Model.UserCreationErrorMsg </div>

        <span style="margin: 10px"></span>

        <div class="wrap-input100 form-group validate-input" data-validate="Fullname is required">
            <input class="input100 form-control validate-input" style=" text-align: center" name="user_realName" placeholder="Full Name">
            <span class="focus-input100"></span>
            <span class="symbol-input100" style="padding: 10px; " >
                <i class="fa fa-user" aria-hidden="true"></i>
            </span>
        </div>
        <span style="margin: 10px"></span>
        <div class="wrap-input100 validate-input form-group" data-validate="Email is required">
            <input class="input100 form-control" type="email" style=" text-align: center"  name="user_email" placeholder="Email">
            <span class="focus-input100"></span>
            <span class="symbol-input100" style="padding: 10px; ">
                <i class="fa fa-envelope" aria-hidden="true"></i>
            </span>
        </div>
        <span style="margin: 10px"></span>
        <div class="wrap-input100 validate-input form-group" data-validate="Password is required">
            <input class="input100 form-control" type="password" style=" text-align: center"  name="user_password" placeholder="Password">
            <span class="focus-input100"></span>
            <span class="symbol-input100"  style="padding: 10px; ">
                <i class="fa fa-lock" aria-hidden="true"></i>
            </span>
        </div>
        <span style="margin: 10px"></span>
        <div class="wrap-input100 validate-input form-group" data-validate="Wage is required">
            <input class="input100 form-control" type="number" style=" text-align: center"  name="user_wage" placeholder="Wage">
            <span class="focus-input100"></span>
            <span class="symbol-input100"  style=" padding: 10px; " >
                <i class="fa fa-dollar" aria-hidden="true"></i>
            </span>
        </div>
        <span style="margin: 10px"></span>
        <div class="wrap-input100 validate-input form-group" data-validate="Employment start is required">
            <input class="input100 form-control" type="date" style=" text-align: center"  name="user_employmentDate" placeholder="Employment start">
            <span class="focus-input100"></span>
            <span class="symbol-input100"  style=" padding: 10px; ">
                <i class="fas fa-calendar-alt" aria-hidden="true"></i>
            </span>
        </div>
        <span style="margin: 10px">
            <span class="login100-form-titleH2">
                Select Role
            </span>
            <div class="form-group">
                <input type="radio" name="authLvl" value="Employee"> Employee <br>
                <input type="radio" name="authLvl" value="Manager"> Manager <br>
                <input type="radio" name="authLvl" value="Administrative"> Administrative
            </div>
        </span>
        <div class="container-login100-form-btn form-group">
            <button asp-page-handler="CreateUser" class="login100-form-btn" type="submit">
                Create User
            </button>
        </div>
    </form>
</div>

