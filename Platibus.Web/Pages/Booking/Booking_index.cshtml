@page
@model Platibus.Web.Pages.Booking.Booking_indexModel
@{
    ViewData["Title"] = "Booking_index";
    Layout = "Shared/_Layout";
}

@section Styles {
    <link href="/css/Booking.css" rel="stylesheet" type="text/css" asp-append-version="true" />
}

<h2 class="center"> Information about booking and shifts</h2>

<hr />


       
<div class="row">
            <div class="col-lg-12">
                <div class="box">
                    <div class="box-header with-border">
                        <h3 class="box-title text-primary"><i class="fa fa-pie-chart"></i> All employees</h3>
                        <div class="box-tools pull-right">
                            <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip"
                                    title="Collapse">
                                <i class="fa fa-minus"></i>
                            </button>
                            <button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove">
                                <i class="fa fa-times"></i>
                            </button>
                        </div>
                    </div>
                    <div class="box-body">
                        <table  id="table" class="table-bordered table-striped table-hover" style="width:100%" >
                            
                            <thead>
                            
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model._allWorkSchedule[0].StarTime)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model._allWorkSchedule[0].EndTime)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model._allWorkSchedule[0].EmployeeOnShift)
                                </th>
                                <th>
                                    Options
                                    
                                </th>
                            </tr>
                            </thead>
            
                            <tbody>
                            @foreach (var shift in @Model._allWorkSchedule)
                            {
                                <tr>
                                    <td >
                                        @Html.DisplayFor(model => shift.StarTime)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(model => shift.EndTime)
                                    </td>
                                    <td>
                                        @foreach (var user in Model.AllUsers)
                                        {

                                            if (shift.EmployeeOnShift.Equals(user.Id))
                                            {
                                                @Html.DisplayFor(x => user.Name)
                                 
                                            }
                                        }
                        
                                    </td>
                    
                                    <td class="display-flex">
                        
                                        <a asp-page="./Booking_EditShift" asp-route-id="@shift.Id" >
                                            <i class="far fa-edit padding-5"></i>
                                        </a>
                                        <form method="post">
                                            <button  asp-page-handler="DeleteShift" type="submit" name="ShiftId" value="@shift.Id" class="fas fa-trash fa-2x padding-5"></button>
                                        </form>
                                    </td>
                                </tr>
                            }
                            </tbody>
                        </table>
                        
                        

<div class="container">
    <div class="center">
        <div class="form-group">
            
            <a asp-page="./Booking_CreateShift">
                <i class="fas fa-plus fa-5x"></i>
                <p style="margin-left: -40px;">Click to add a new shift</p>
            </a>
        </div>
        
    </div>
</div>

<h3>Employees on this current week</h3>

<div class="container dayRow">
    <div class="row">
        @{
            var today = DateTime.Now;
            var thisSunday = today.AddDays(-(int)today.DayOfWeek+1);

            for (int i = 0; i < 7; i++)
            {
                <div class="col">
                    @Html.DisplayName(thisSunday.AddDays(i).DayOfWeek.ToString())
                     
                </div>
            }

        }

    </div>
    
    <div class="row">
        @{
            

            for (int i = 0; i < 7; i++)
            {
                <div class="col employeeColumn">
                    @foreach (var item in Model._allWorkSchedule)
                    {
                        if (item.StarTime.Date.Equals(thisSunday.AddDays(i).Date))
                        {
                            foreach (var user in Model.AllUsers)
                            {
                                if (user.Id.Equals(item.EmployeeOnShift))
                                {
                                    <div class=" employeeColum">
                                        <p class="employeeColum">
                                           @Html.DisplayFor(model => user.Name)
                                        </p>
                                        <p class="totalTimeMargin">total time</p>
                                                                     
                                        @Html.DisplayName(item.EndTime.Subtract(item.StarTime).TotalHours.ToString())
                                        <hr>
                                    </div>
                                }
                            }
                        }
                        
                    }
                     
                    
                </div>
            }

        }

    </div>
    
    <div class="row">
        @{
            

            for (int i = 0; i < 7; i++)
            {
                <div class="col">
                    <p>Total time</p>
                     
                </div>
            }

        }

    </div>
</div>

                    </div>
                </div>
            </div>
        </div>





@section Scripts
{

    <script type="text/javascript">
        
        $(document).ready(function() {
            $('#table').DataTable({
                "info": false,
                "language": {
                    "lengthMenu": "",
                    "zeroRecords": "Nothing found - sorry",
                    "info": "Showing page _PAGE_ of _PAGES_",
                    "infoEmpty": "No records available",
                    "infoFiltered": "(filtered from _MAX_ total records)"
                }
            });
            $('#table_filter input').addClass('filter');
        });
    </script>
}