@page

@model Platibus.Web.Pages.Booking.Calender_CreateShiftModel

@{ 
    ViewData["Title"] = "User Index";
}





<div class="row justify-content-lg-center">
    <div class="col-lg-10">
        <div class="box">
            <div class="box-header with-border">
                <h3 class="box-title text-primary"><i class="fas fa-user"></i>  Administrative Page</h3>
                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip"
                            title="Collapse">
                        <i class="fa fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove">
                        <i class="fa fa-times"></i>
                    </button>
                </div>
            </div>
            <div class="box-body center-admin">
               
                
                <!-- Content -->
                <form method="post">
                    <div class="container">
                        <div class="row justify-content-center">
                            <div class="col-md-4 center-div">
                                <div class="form-group">
                                    <label class="control-label">Start Date</label>
                                    <input asp-for="@Model.StartDate.Date"  type="date" class="form-control" name="StartDate"/>

                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="form-group">
                                    <label class="control-label">Start Time</label>
                                    <input asp-for="@Model.StartDate.Date.TimeOfDay" type="time" class="form-control" name="StartTime"/>

                                </div>

                            </div>

                        </div>
                        
                        
                        <div class="row justify-content-center">
                            <div class="col-md-4 center-div">
                                <div class="form-group">
                                    <label class="control-label">End Date</label>
                                    <input asp-for="@Model.EndDate.Date" type="date" class="form-control" name="EndDate"/>

                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="form-group">
                                    <label class="control-label">End Time</label>
                                    <input asp-for="@Model.EndDate.Date.TimeOfDay" type="time" class="form-control" name="EndTime"/>

                                </div>

                            </div>

                        </div>

                        <div class="row">

                            <div class="col" style="display: flex; justify-content: flex-end; margin-right: 50px;">


                               

                                
                                <div class="form-group">
                                   
                                    <input type="hidden" asp-for="@Model.Id" value="@Model.Id" name="id"/>
                                    <button style="" type="submit" asp-page-handler="CreateShift" class="far fa-check-square fa-4x"></button>
                                </div>

                            </div>


                        </div>
                    </div>
                    
                </form>
                
            </div>
            <!-- End content -->
        </div>
    </div>
</div>
