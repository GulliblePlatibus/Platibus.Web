@model Platibus.Web.DataServices.Models.User.User



<aside class="main-sidebar">
    <!-- sidebar: style can be found in sidebar.less -->
    <section class="sidebar">
        <!-- Sidebar user panel -->
        <div class="user-panel">
            <div class="pull-left image">
                <img src="~/content/images/profile.jpg" class="img-circle" alt="User Image">
            </div>
            <div class="pull-left info">
                <p>@Html.DisplayName(Model.Name)</p>
                
            </div>
        </div>

        <!-- sidebar menu: : style can be found in sidebar.less -->
        <ul class="sidebar-menu" data-widget="tree">
            
            @if (true) 
            {
                
                <!-- ADMIN MENU -->
                <li class="header">ADMIN</li>


                <li class="Dashboard">
                    <a asp-page="/Administrative/Administrative_Index">
                        <i class="fa fa-user"> </i> <span>Administrative</span>
                    </a>
                </li>
            } else if (true)
            {
                
                <!-- Manager MENU -->
                <li class="header">My Overview</li>


                <li class="Dashboard">
                    <a asp-page="/Booking/Booking_Index">
                        <i class="fa fa-chalkboard-teacher"></i> <span>My Shifts</span>
                    </a>
                </li>


                <li class="Dashboard">
                    <a asp-page="/Calendar/Calendar_Index">
                        <i class="fa fa-calendar-alt"></i> <span>Booking Calendar</span>
                    </a>
                </li>


                <li class="Dashboard">
                    <a asp-page="/Settings/Settings_Index">
                        <i class="fa fa-calendar-alt"></i> <span>Settings</span>
                    </a>
                </li>


            } else if (true)
            {
                <!-- EMPLOYEE MENU -->
                
                <li class="header">My Overview (Employee)</li>
                
                <li class="Dashboard">
                    <a asp-page="/Administrative/Administrative_Index">
                        <i class="fa fa-user"> </i> <span>My Shifts</span>
                    </a>
                </li>
                
            }
            
            
            


            <li class="header">Analytics</li>


            <li class="Dashboard">
                <a asp-page="/Analytics/Analytics_Index">
                    <i class="fa fa-pie-chart"></i> <span>Analytics</span>
                </a>
            </li>


            @{
                /*
                 <li class="@Html.IsSelected(controller: MainMenu.VendorType.ControllerName)">
                <a href="@MainMenu.VendorType.Path">
                    <i class="fa fa-gear"></i> <span>@MainMenu.VendorType.PageName</span>
                </a>
            </li>
                 */
            }


        </ul>
    </section>
    <!-- /.sidebar -->
</aside>