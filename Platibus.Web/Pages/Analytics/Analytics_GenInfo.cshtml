@page
@model Platibus.Web.Pages.Analytics.Analytics_GenInfoModel
@using System.Web.Helpers;
@using Platibus.Web.Acquaintance.IDataServices

@{
    ViewData["Title"] = "Analytics_GenInfo";
}
<head>
    <!--Load the AJAX API-->
    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
    <script type="text/javascript">

        // Load the Visualization API and the corechart package.
        google.charts.load('current', {'packages':['corechart']});

        // Set a callback to run when the Google Visualization API is loaded.
        google.charts.setOnLoadCallback(drawChart);

        // Callback that creates and populates a data table,
        // instantiates the pie chart, passes in the data and
        // draws it.
        function drawChart() {

            // Create the data table.
            var data = new google.visualization.DataTable();
            data.addColumn('string', 'Employee Names');
            data.addColumn('number', 'Total Salary');
            data.addRows([
                ['@Model.UserNameAndSalariesList[0].name', 3],
                ['@Model.UserNameAndSalariesList[1].name', 3],
                ['@Model.UserNameAndSalariesList[2].name', 3],
                ['@Model.UserNameAndSalariesList[3].name', 3],
                ['@Model.UserNameAndSalariesList[4].name', 3],
                ['@Model.UserNameAndSalariesList[5].name', 3],
                ['@Model.UserNameAndSalariesList[6].name', 5],
                ['@Model.UserNameAndSalariesList[7].name', 3],
                ['@Model.UserNameAndSalariesList[8].name', 3],
                ['@Model.UserNameAndSalariesList[9].name', 3]
            ]);

            // Set chart options
            var options = {'title':'Employee total Salary while employeed',
                'is3D':true,
                'width':1000,
                'height':400};

            // Instantiate and draw our chart, passing in some options.
            var chart = new google.visualization.BarChart(document.getElementById('chart_div'));
            chart.draw(data, options);
        }
    </script>
</head>

<body>
<div></div>
<form method="post">
    <input type="submit" value="Next Ten" asp-page-handler="NextTen"/>
</form>

<div id="chart_div" style="text-align: center"></div>
</body>