@page
@model Platibus.Web.Pages.Calendar.Calendar_IndexModel

@{
    ViewData["Title"] = "Calendar_Index";
}


<h2>Calendar_Index</h2>

<table border="1">
    <thead>
    <tr>
        <th>Monday</th>
        <th>Tuesday</th>
        <th>Wednesday</th>
        <th>Thursday</th>
        <th>Friday</th>
        <th>Saturday</th>
        <th>Sunday</th>
    </tr>
    </thead>
    <tbody>
    <tr>
        @for (int i = 0; i < 35; i++)
        {
            DateTime date = @Model.StartDate.AddDays(i);
            
            
            if (i % 7 == 0 && i > 0)
            {
                @:</tr><tr>
            }
            
            <td>@date.Day</td>
        }
    </tr>
    </tbody>
</table> 

<script type="text/javascript" src="~/Calendar_/cscript.js"> </script>
<script type="text/javascript" src="~/Calendar_/calendarscript.js"> </script>
<link rel="stylesheet" type="text/css" href="~/Calendar_/style.css">





