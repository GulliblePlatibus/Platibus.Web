@page
@using Platibus.Web.Helpers
@model Platibus.Web.Pages.Employee.Employee_IndexModel
@{
    ViewData["Title"] = "Employee_Index";
}


@section Styles {
    <link href="/content/Settings/Settings.css" rel="stylesheet" type="text/css" asp-append-version="true" />
}

<h2>Employee_Index</h2>

<div class="row">
    <div class="col-lg-12">
        <div class="box">
            <div class="box-header with-border">
                <h3 class="box-title text-primary"><i class="fas fa-user"></i>  Employee Page</h3>
                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip"
                            title="Collapse">
                        <i class="fa fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove">
                        <i class="fa fa-times"></i>
                    </button>
                </div>
            </div>
            <div class="box-body">
               
                
                <!-- Content -->
               
                
                
                

                <div class="container dayRow">
                    
                    @{
                        var today = DateTime.Now;
                        var thisSunday = today.AddDays(-(int) today.DayOfWeek + 1);
                        var employee = HttpContext.SubjectId();

                        <div class="row">
                            <div class="col">

                            </div>

                            @for (int i = 0; i < 7; i++)
                            {
                                <div class="col">
                                    @Html.DisplayName(thisSunday.AddDays(i).DayOfWeek.ToString())
                                    <p>@Html.DisplayName(thisSunday.AddDays(i).Date.ToString())</p>

                                </div>
                            }
                        </div>

                        foreach (var user in Model.UserShiftDetaileds)
                        {
                            if (employee.Equals(user.Id))
                            {
                                <div class="row no-gutters row-height">


                                    <div class="col border-right displayFlex-EmployeeName">
                                        <p class="position-employeeName"> @Html.DisplayName(user.Name)</p>
                                    </div>
                                    }
                                    {
                                    }



                                    @for (int j = 0; j < 7; j++)
                                    {

                                        var boo = true;

                                        foreach (var VARIABLE in Model.UserShiftDetaileds)
                                        {

                                            if (VARIABLE.ShiftStart.Date.Equals(thisSunday.AddDays(j).Date) && VARIABLE.Id.Equals(user.Id))
                                            {

                                                <div class="col col-style-reserved" style="margin: 2px;">
                                                    <span class="Border border-primary">@Html.Display(VARIABLE.name)</span>

                                                </div>

                                                boo = false;
                                            }
                                        }

                                        if (boo)
                                        {
                                            <div class="col col-style-free" style="margin: 2px;">
                                                <span class="Border border-primary">test</span>

                                            </div>
                                        }
                                    }
                                </div>
                            }
                        }
                    }


                    <!-- End content -->
                </div>
            </div>
        </div>
    </div>
</div>
